{% extends 'base.html.twig' %}

{% block title %}Hello DetailsMangaController!{% endblock %}

{% block body %}
<div class="container d-flex">
    <div class="d-flex">
        <img class="w-50" src="{{ manga.image }}" alt="">
        <div class="ps-3 w-50">
            <h3 style="font-size: 3em !important">{{ manga.nom }}</h3>
            <ul style="list-style-type: none; font-size: 1.3em" class="p-0 text-white">
                <li>Sc√©nario : {{ manga.nomDuCreateur }}</li>
                <li>Dessin : {{ manga.dessin }} </li>
                <li>Genre : {{ manga.genres.name }}</li>
                {% if manga.editeur is not same as null %}

                <li>Editeur : {{ manga.editeur.nom }}</li>

                {% else %}
                    
                <li>Editeur : Aucun</li>    

                {% endif %}
                <li>Debut : {{ manga.debut | date('d-M-Y') }}</li>
                <li>Status : {{ manga.statut }}</li>
            </ul>
        </div>
    </div>
    <div class="d-flex align-items-end justify-content-evenly w-50">
        <a style="width: 40%" class="btn btn-outline-info p-2" href="">Lire le premier chapitre</a>
        <a style="width: 40%" class="btn btn-outline-info p-2" href="">Lire le dernier chapitre</a>
    </div>
</div>
<div class="container mt-4">
    <h5>Synopsis :</h5>
    <p>{{ manga.description }}</p>
</div>
<div class="container mt-4">
    {% for chapitre in chapitres %}
        {% if chapitre is same as null %}
            <div>
                <p>Ce manga ne contient pas encore de chapitre revenez plus tard</p>
            </div>
        {% else %}
            <div class="bg-info bg-opacity-50 w-50 py-2 ps-3 mt-2">
                <a href=""><h5 class="m-0">Chapitre {{ chapitre.numero }}</h5></a>
            </div>
        {% endif %}
    {% endfor %}
</div>
{% endblock %}
