{% extends 'base.html.twig' %}

{% block title %}Manga index{% endblock %}

{% block body %}
            <h1 class="px-3">Vos Mangas</h1>
            <div class="container px-3 py-4">
                <a href="{{ path('manga_new') }}" class="px-5 btn btn-outline-info">Créer un nouveau manga</a>
            </div>
            
            <div class="container py-3">
                <div class="row justify-content-evenly">

                {% for manga in mangas %}

                    <div class="card border-light col-3">
                        <div class="card-body pt-2">
                            <div class="card-title pl-4 pt-3">
                                <h4>{{manga.nom}}</h4>
                            </div>
                            <img style="border-radius : 10px" class="img-fluid" src="{{ manga.image }}" alt="">
                            <p class="pt-3">Date de création : {{manga.debut | date("d-M-Y")}}</p>
                        </div>
                        <div class="pb-4 text-center">
                        
                           {% if manga.editeur is same as null %}

                          <p>Aucun</p>

                            {% else %}

                            <p>{{ manga.editeur.nom }}</p>
                                
                            {% endif %}

                        </div>
                        <div class="pb-4 text-center">
                            <a href="{{ path('manga_show', {'id': manga.id}) }}" class="btn btn-outline-info">Voir/Ajouter un chapitre</a>
                        </div>
                        <div class="card-text text-center d-flex justify-content-around mb-3">
                            <a href="{{ path('manga_edit', {'id': manga.id}) }}" class="btn btn-outline-info">Modifier</a>
                            <a href="{{ path('manga_delete', {'id': manga.id}) }}" class="btn btn-outline-danger">Supprimer</a>
                        </div>
                    </div>
        
                {% endfor %}

                </div>
            </div>

{% endblock %}
