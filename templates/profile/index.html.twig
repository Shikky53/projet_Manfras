{% extends 'base.html.twig' %}

{% block title %}Profil de {{ app.user.pseudo }}{% endblock %}

{% block body %}

<div class="container pt-3 mt-3 mt-md-5">
    <div class="container">
            <div class="d-flex flex-column flex-md-row">
                <div class="col-md-6 col-12 text-md-start py-3 d-flex flex-column align-items-center align-items-md-start justify-content-center">
                    {% if app.user.image is not same as null %}

                        <img class="avatarProfile" src="{{ app.user.image }}" alt="">
                    
                    {% else %}

                        <img class="avatarProfile" src="https://images.unsplash.com/photo-1505440484611-23c171ad6e96?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2908&q=80" alt="">
                    
                    {% endif %}
                        <p class="mt-3 ms-md-5 ps-md-2">{{ app.user.pseudo }}</p>
                </div>
                <div class="col-md-6 col-12 text-center text-md-end justify-content-md-start">
                    <h1>Réglages<i style="padding-left : 15px;" class="fa-solid fa-gear"></i></h1>
                    <div>
                    <a class="btn btn-outline-info mt-4" href="{{ path('account_edit_pseudo') }}">Modifiez votre pseudo</a>
                    </div>
                    <div>
                    <a class="btn btn-outline-info mt-4" href="{{ path('account_edit_password') }}">Modifiez votre mot de passe</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container px-3 px-md-1 mt-5 mt-md-3">
        <div class="w-100 border border-2 p-lg-1 border-info rounded-2 text-center">
            <h2 class="pt-1" style="text-decoration: none;">Bibliothèque</h2>
        </div>
        <div class="container text-center mt-4" style="background : #3131319d">
            <p class="p-2">Cette fonction n'est pas encore disponible</p>
        </div>
    </div>
</div>

{% endblock %}